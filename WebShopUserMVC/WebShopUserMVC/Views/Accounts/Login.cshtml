@model WebShopUserMVC.Models.Account
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm())
{

    <p>Sign in</p>
    <br />
    <p>Username:</p>

    @Html.TextBoxFor(x => x.Username, new { @class = "inputFields", @required = "required" })
    <br>
    <p>Password:</p>
    @Html.PasswordFor(x => x.Password, new { @class = "inputFields", @required = "required" })
    <br>
    <br>
    <input type="submit" value="Login" class="inputButtons">

    @Html.ActionLink("Register an account", "Register", "Accounts", new { @class = "inputButtons" })
    <br />
    @Html.ValidationSummary();
}


